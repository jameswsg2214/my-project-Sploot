<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >

        <ImageView android:layout_width="match_parent"
                android:id="@+id/profile_image"
                android:src="@drawable/dogpic"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="None"
                android:layout_gravity="center"
                android:textSize="19dp"
                android:id="@+id/viewpetname"
                android:textColorHint="@color/splootcolour"
                android:paddingLeft="20dp"
                android:textColor="@color/splootcolour"
                android:textStyle="bold"
                />

        <LinearLayout
                android:id="@+id/petitlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:background="@drawable/ic_edittext"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/petedit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Edit"
                     />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
            android:background="@drawable/rectangle"
            android:layout_marginRight="20dp"
            android:layout_weight="0.4"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_height="0dp">
        <LinearLayout android:orientation="horizontal"
                android:id="@+id/firstrow"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:weightSum="3"
                android:layout_width="match_parent">

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_width="0dp">
                <ImageView
                        android:id="@+id/bread_icon"
                        android:layout_width="match_parent"
                        android:src="@drawable/breedimg"
                        android:layout_margin="10dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Breed"
                        android:textColor="@color/splootcolour"
                        android:textStyle="bold"
                        android:layout_weight="0.3"
                        android:hint="Type"
                        android:gravity="center"
                        />

                <TextView
                        android:id="@+id/viewbreed"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:hint="None"
                        android:textSize="14dp"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"

                        android:marqueeRepeatLimit="marquee_forever"

                        android:scrollHorizontally="true"

                        android:singleLine="true" />

            </LinearLayout>
            <TextView
                    android:layout_width=".5dp"
                    android:background="@color/litblack"
                    android:layout_below="@+id/firstrow"

                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"

                    android:orientation="vertical">
                <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_age"
                        android:layout_margin="10dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:textStyle="bold"
                        android:text="Age"
                        android:textColor="@color/splootcolour"
                        android:hint="Type"
                        android:gravity="center"
                        />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:id="@+id/viewage"
                        android:hint="None"
                        android:textSize="14dp"
                        android:gravity="center"
                        />
            </LinearLayout>
            <TextView
                    android:layout_width=".5dp"
                    android:background="@color/litblack"
                    android:layout_below="@+id/firstrow"

                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:layout_width="0dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_sex"
                        android:layout_margin="10dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:textColor="@color/splootcolour"
                        android:textStyle="bold"
                        android:text="Gender"
                        android:gravity="center"
                        android:hint="Type" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:id="@+id/viewgender"

                        android:textSize="14dp"
                        android:gravity="center"
                        android:hint="None" />
            </LinearLayout>


        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:id="@id/text"
                android:background="@color/litblack"
                android:layout_below="@+id/firstrow"
                android:layout_height=".5dp"/>
        <LinearLayout android:orientation="horizontal"
                android:id="@+id/secoundrow"
                android:layout_weight="0.5"
                android:layout_below="@+id/text"
                android:layout_height="0dp"
                android:layout_width="match_parent">
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_width="0dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_vaccination"
                        android:layout_margin="10dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Vaccination"
                        android:textStyle="bold"
                        android:textColor="@color/splootcolour"
                        android:layout_weight="0.3"
                        android:hint="Type"
                        android:gravity="center"
                        />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/viewviccination"
                        android:layout_weight="0.3"
                        android:textSize="14dp"
                        android:hint="None"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        />
            </LinearLayout>
            <TextView
                    android:layout_width=".5dp"
                    android:background="@color/litblack"
                    android:layout_below="@+id/firstrow"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_width="0dp">
                <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/deworming"
                        android:layout_margin="10dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="De-worming"
                        android:textStyle="bold"
                        android:textColor="@color/splootcolour"
                        android:gravity="center"
                        android:hint="Type" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:id="@+id/viewdeworming"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:hint="None" />
            </LinearLayout>
            <TextView
                    android:layout_width=".5dp"
                    android:background="@color/litblack"
                    android:layout_below="@+id/firstrow"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/alertclick"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_alert"
                        android:layout_margin="10dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:text="Alert"
                        android:textStyle="bold"
                        android:textColor="@color/splootcolour"
                        android:hint="Type"
                        android:gravity="center"
                        />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/viewalert"
                        android:textSize="14dp"
                        android:gravity="center"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>