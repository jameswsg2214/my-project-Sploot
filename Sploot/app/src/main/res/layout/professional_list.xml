<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splootcolour"
            android:orientation="horizontal"
            android:weightSum="1"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veterinarian"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_weight=".3"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />

        <ImageView
                android:id="@+id/doctor_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".7"
                android:src="@drawable/ic_highlight_off" />
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <EditText android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:id="@+id/pro_name"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_login_edittext"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:hint="Doctor Name"
            android:textColor="@color/signup"
            />
    <EditText android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:id="@+id/pro_hospital_name"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_login_edittext"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:hint="Hospital/ Clinic name"
            android:textColor="@color/signup"
            />
    <EditText android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:id="@+id/pro_phone_no"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_login_edittext"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:maxLength="10"
            android:digits="1234567890"
            android:singleLine="true"
            android:inputType="number"
            android:hint="Mobile Number"
            android:textColor="@color/signup"
            />
    <EditText android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:id="@+id/pro_email_id"
            android:inputType="textEmailAddress"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_login_edittext"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:hint="Mail ID"
            android:textColor="@color/signup"
            />
    <EditText android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:id="@+id/pro_address"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_login_edittext"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:hint="Address"
            android:textColor="@color/signup"
            />

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/ic_login_edittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="1"
                android:layout_marginRight="10dp">

            <AutoCompleteTextView
                    android:id="@+id/pro_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:background="@null"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:hint="Select country"
                    android:paddingRight="10dp" />

        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/ic_login_edittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:weightSum="1"
                android:layout_marginRight="20dp"
                >

            <AutoCompleteTextView
                    android:id="@+id/pro_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="Select state"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp" /> />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/ic_login_edittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:weightSum="1"
                android:layout_marginRight="10dp"
                >

            <AutoCompleteTextView
                    android:id="@+id/pro_profile_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:background="@null"
                    android:hint="Cities / District"
                    android:singleLine="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp" />


        </LinearLayout>



        <LinearLayout android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/ic_login_edittext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:weightSum="1"
                android:layout_marginRight="20dp"
                >
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:id="@+id/pro_pin"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:textColorHint="@color/signup"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="7"
                    android:textColor="@color/signup"
                    android:hint="Pin"
                    />
        </LinearLayout>
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_edittext"
            android:id="@+id/profile_save"
            android:layout_marginTop="20dp"
            android:text="save"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textStyle="bold" />


    </LinearLayout>
    </ScrollView>
</LinearLayout>