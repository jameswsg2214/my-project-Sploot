<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headertextfortime"
            android:hint="First intake"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="@color/splootcolour"
            android:textColorHint="@color/splootcolour"
            android:textSize="25dp"
            />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />

    <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/litblack"
            android:numbersTextColor="@color/black"
            android:numbersBackgroundColor="@color/splootcolour"
            android:outlineSpotShadowColor="@color/black"
            android:numbersInnerTextColor="@color/red"
            android:numbersSelectorColor="@color/signup"
            android:id="@+id/gettime"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:id="@+id/timecancel"
                android:text="cancel"
                android:textColor="@color/splootcolour"

                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="ok"
                android:id="@+id/timeok"
                android:textColor="@color/splootcolour"

                />
    </LinearLayout>


</LinearLayout>