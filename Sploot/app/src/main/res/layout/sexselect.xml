<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sex"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/signup"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

    <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/femalelayout"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_login_edittext"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/femaletext"
                android:text="Female"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/splootcolour"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

    </LinearLayout>


    <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/malelayout"

            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_login_edittext"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Male"
                android:gravity="center"
                android:id="@+id/maletext"
                android:textStyle="bold"
                android:textColor="@color/splootcolour"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

    </LinearLayout>

</LinearLayout>