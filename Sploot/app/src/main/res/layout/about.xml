<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splootcolour"
            android:orientation="horizontal"
            android:weightSum="1"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_weight=".3"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />


        <ImageView
                android:id="@+id/contect_close"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".7"
                android:src="@drawable/ic_highlight_off" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/dogpic"
                android:layout_margin="20dp"
                android:layout_weight="6"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/about_data"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="sploot empowers pet parents to take better, more informed care of their pets "
                android:inputType="textMultiLine"
                android:layout_weight="3.5"
                />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="About"
                    android:gravity="center"
                    android:textStyle="bold"

                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Service"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconmonstr_facebook_1"
                    android:layout_marginLeft="20dp"
                    />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_iconmonstr_instagram_11"
                    android:layout_marginLeft="20dp"
                    />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>