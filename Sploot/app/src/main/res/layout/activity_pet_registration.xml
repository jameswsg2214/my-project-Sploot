<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.PetRegistrationActivity">
   <include layout="@layout/splootheader"/>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/petselect"
        android:visibility="visible"
              android:orientation="vertical">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Choose pet type"
              android:gravity="center"
              android:layout_marginTop="50dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginTop="30dp"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="100dp"
                   android:layout_height="150dp"
                   android:layout_gravity="center"
                   android:id="@+id/dogselect"
                   android:src="@drawable/dog"
        />
        <ImageView android:layout_width="100dp"
                   android:layout_height="150dp"
                   android:id="@+id/catselect"
                   android:layout_gravity="center"
                   android:src="@drawable/cat"
        />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/registerlayout"
            android:visibility="gone"
                  android:orientation="vertical"
    >
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="45dp"
                              android:background="@drawable/ic_pet_catogory"
                              android:layout_margin="20dp">
                    <Spinner
                            android:id="@+id/spinner_sample"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:layout_weight="1"
                            android:background="@null"
                    />
                    <ImageView android:layout_width="match_parent"
                               android:layout_height="30dp"
                               android:layout_weight="7"
                               android:layout_gravity="center"
                               android:background="@drawable/ic_expand_more_white"
                    />
                </LinearLayout>
                <EditText android:layout_width="match_parent"
                          android:layout_height="45dp"
                        android:id="@+id/getpetname"
                          android:layout_marginRight="20dp"
                          android:layout_marginLeft="20dp"
                          android:background="@drawable/ic_login_edittext"
                          android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                          android:hint="Enter Pet Name"
                        android:textColor="@color/signup"
                />
                <RelativeLayout android:layout_width="match_parent"
                                android:id="@+id/imagelayout"
                                android:background="@drawable/ic_edittext"
                                android:layout_margin="20dp"
                                android:layout_height="300dp">
                    <ImageView android:layout_width="match_parent"
                            android:id="@+id/profileimagae"
                               android:layout_height="match_parent"
                               android:foregroundGravity="center"

                               android:layout_margin="10dp"/>
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/upload"
                                  android:layout_centerInParent="true">
                        <ImageView android:layout_width="40dp"
                                   android:layout_height="40dp"
                                android:id="@+id/imageupload"
                                   android:background="@drawable/ic_camera"
                        />
                        <ImageView android:layout_width="40dp"
                                   android:layout_height="40dp"
                                   android:background="@drawable/ic_photo"
                                android:id="@+id/gallaryupload"
                        />
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                >

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_login_edittext">
                        <Spinner
                                android:id="@+id/breed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:paddingLeft="10dp" />

                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_weight="3"
                                android:background="@drawable/ic_expand_more_black" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="30dp"
                                  android:visibility="invisible"

                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                                  android:background="@drawable/ic_login_edittext"
                                  android:layout_weight="1"
                    >
                        <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                        />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                >
                    <LinearLayout android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_login_edittext"
                            android:layout_marginTop="20dp"
                            >
                        <Spinner
                                android:id="@+id/gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:paddingLeft="10dp" />

                        <ImageView android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="3"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_expand_more_black"
                                android:layout_marginRight="5dp"
                                />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="40dp"
                                  android:visibility="invisible"

                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                                  android:background="@drawable/ic_login_edittext"
                                  android:layout_marginTop="20dp"
                                  android:layout_weight="1"
                    >
                        <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="30dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                        />
                    </LinearLayout>
                </LinearLayout>




                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                        android:id="@+id/cyclelayout"
                        android:visibility="gone"
                >
                    <LinearLayout android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_login_edittext"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            >
                        <Spinner
                                android:id="@+id/cycle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:paddingLeft="10dp" />
                        <ImageView android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="3"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_expand_more_black"
                                android:layout_marginRight="5dp"
                                />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_login_edittext"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            >

                        <Spinner
                                android:id="@+id/period"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:paddingLeft="10dp" />
                        <ImageView android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="3"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_expand_more_black"
                                android:layout_marginRight="5dp"
                                />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_login_edittext"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            >
                        <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_weight="1"
                                android:id="@+id/age"
                                android:background="@android:color/transparent"
                                android:layout_gravity="center"
                                android:textColorHint="@color/signup"
                                android:textStyle="bold"
                                android:maxLength="2"
                                android:inputType="date"
                                android:textColor="@color/signup"
                                android:hint="Age"

                                />

                        <ImageView
                                android:id="@+id/agedone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingRight="10dp"
                                android:src="@drawable/ic_done_black" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp"
                                  android:layout_height="40dp"
                                  android:background="@drawable/ic_login_edittext"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/doblayout"
                                  android:layout_weight="1"
                    >
                        <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_weight="1"
                                android:id="@+id/petdob"
                                android:background="@android:color/transparent"
                                android:layout_gravity="center"
                                android:textColorHint="@color/signup"
                                android:textStyle="bold"
                                android:inputType="date"
                                android:textColor="@color/signup"
                                android:hint="DD/MM/YYYY"
                        />
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                android:id="@+id/selectdob"
                                   android:layout_gravity="center"
                                   android:paddingRight="10dp"
                                   android:src="@drawable/ic_insert_invitation"
                        />
                    </LinearLayout>
                </LinearLayout>
                <Button android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/submitall"
                        android:background="@drawable/ic_edittext"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="Ok"
                        android:layout_margin="20dp"
                        />
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>