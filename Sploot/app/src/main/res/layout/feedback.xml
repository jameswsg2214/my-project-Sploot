<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:gravity="left">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sploot_logo2"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_weight="1"
                >
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/dogpic"
                    android:layout_gravity="right"
                    android:cropToPadding="true"
                    />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:gravity="left">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sploot_logo2"
                android:text="sploot"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_weight="1"
                >
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/profilelist"
                    android:background="@drawable/dogpic"
                    android:layout_gravity="right"
                    android:cropToPadding="true"
                    />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splootcolour"
            android:id="@+id/header"
            android:orientation="horizontal"
            android:weightSum="1"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_weight=".3"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />


        <ImageView
                android:id="@+id/feedback_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".7"
                android:src="@drawable/ic_highlight_off" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/header"
            android:layout_above="@+id/end"
            android:weightSum="10"
            >
     <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_margin="20dp"
             android:layout_weight="5"
             android:weightSum="1"
             android:orientation="vertical"
             android:background="@drawable/ic_black_edittext"
             >
         <EditText
                 android:inputType="textMultiLine"
         android:gravity="top|left"
         android:layout_height="0dp"
                 android:padding="20dp"
         android:layout_width="match_parent"
         android:scrollbars="vertical"
                 android:background="@android:color/transparent"
                 android:layout_weight=".9"

                 tools:ignore="Suspicious0dp" />
         <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight=".1"
                 android:layout_gravity="right"
                 android:gravity="right"
                 android:layout_margin="10dp"
                 android:src="@drawable/ic_iconmonstr_telegram_5"
        />
     </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/end"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_iconmonstr_facebook_1"
                android:layout_marginLeft="20dp"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_iconmonstr_instagram_11"
                android:layout_marginLeft="20dp"
                />

    </LinearLayout>


    </RelativeLayout>
</LinearLayout>